<li><%= link_to "Products", products_path %></li>
<% if !current_user %>
  <li><%= link_to "Sign in", new_session_path %></li>
  <li><%= link_to "Sign up", new_user_path %></li>

<% else %>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%="Signed in as: #{current_user.name.capitalize}"%><span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "Profile", user_path(current_user.id) %></li>

      <li class="divider"></li>
      <li><%= link_to "Sign out", session_path('current'), data:{method: :delete} %></li>
    </ul>
  </li>
<% end %>